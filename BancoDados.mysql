 CREATE DATABASE pi1ano;

 CREATE TABLE `alunos` (
   `id` int NOT NULL AUTO_INCREMENT,
   `nome` varchar(255) NOT NULL,
   `email` varchar(255) NOT NULL,
   `senha` varchar(255) NOT NULL,
   `pontuacao_facil` int DEFAULT '0',
   `pontuacao_medio` int DEFAULT '0',
   `pontuacao_dificil` int DEFAULT '0',
   PRIMARY KEY (`id`),
   UNIQUE KEY `email` (`email`)
 ) 
